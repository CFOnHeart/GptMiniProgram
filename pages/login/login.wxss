/* pages/login/login.wxss */
.row-display {
  display: flex;
  flex-direction: row;
}
.column-display {
  display: flex;
  flex-direction: column;
}
.the-whole-page {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.title-section {
  width: 100%;
  height: 10%;
  text-align: center;
  font-size: 1.3rem;
  padding-top: 20%;
}
.login-input-view{
  height: 10%;
  width: 100%;
  padding-top: 2%;
  padding-bottom: 2%;
  display: flex;
  flex-direction: row;
}
.login-input-label{
  text-align: end; margin-right: 5%; width: 35%; padding-top: 10rpx;
}
.login-input-text{
  width: 40%; border: 1rpx solid lightgray; border-radius: 10rpx; padding: 10rpx;
}


